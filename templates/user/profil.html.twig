{% extends ('base.html.twig')%}


{% block title %}Modifier mes informations || {{ parent () }} {% endblock%}

{% block main %}
    {% for message in app.flashes('success') %}
        <div class="btn-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Modifier mes informations</h1>

    <div>
        {{ form_start(registerForm) }}
        {{ form_widget(registerForm) }}
       <div class="row">
           <div class="col-12 text-center">
           <button class="btn btn-outline-light bouton" type="submit">Enregister</button>
        <a href="{{ path ('changePassword') }}" type="button" class="btn btn-outline-success btn-sm bouton">Modifier mon mot de passe</a>
        <a type="button" href="{{ path ('monProfil') }}"class="btn btn-outline-danger bouton">Annuler</a>
           </div>
       </div>
        {{ form_end(registerForm) }}

    </div>



{% endblock %}