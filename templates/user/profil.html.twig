{% extends ('base.html.twig')%}


{% block title %}Modifier mes informations || {{ parent () }} {% endblock%}

{% block main %}
    {% for message in app.flashes('success') %}
        <div class="btn-success">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Modifier mes informations</h1>

    <div>
        {{ form_start(registerForm) }}
        {{ form_widget(registerForm) }}
        <button class="btn btn-outline-light" type="submit">Enregister</button>
        <a type="button" href="{{ path ('monProfil') }}">Annuler</a>
        {{ form_end(registerForm) }}
    </div>

    <a href="{{ path ('changePassword') }}" type="btn btn-outline-light">Modifier mon mot de passe</a>


{% endblock %}