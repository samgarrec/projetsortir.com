{% extends ('base.html.twig') %}

{% block title %}Afficher un profil | {{ parent () }} {% endblock%}

{% block main %}


    <h1>Profil de {{ unProfil.username }}</h1><table class="table">
    <thead>
    <tr>
       {# <th scope="col">Id</th> #}
        <th scope="col">Picture</th>
        <th scope="col">Nom</th>
        <th scope="col">Prénom</th>
        <th scope="col">Téléphone</th>
        <th scope="col">Email</th>
        <th scope="col">Administrateur</th>
        <th scope="col">Site</th>




    </tr>
    </thead>
    <tbody>

        {#        {% if sortie.etat.libelle !='cree' or sortie.etat.libelle!='annule' or sortie.organisateur.id==app.user.id %}#}
        <tr>
           {# <td>{{ unProfil.id }}</td> #}
            <td>{% if unProfil.picture == true %}<img src="{{ asset ('img/') ~ unProfil.picture }}" alt="Avatar">{% else %}<img src="{{ asset ('img/default.png')}}" alt="Avatar">{% endif %}</td>
            <td>{{ unProfil.nom }}</td>
            <td>{{ unProfil.prenom }}</td>
            <td>{{ unProfil.telephone }}</td>
            <td>{{ unProfil.email}}</td>
            <td>{% if unProfil.administrateur  %} Oui{% else %}Non{% endif %}</td>
            <td>{{ unProfil.site.nom}}</td>

        </tr>


    </tbody>
</table>
{% if app.user== unProfil %}
    <a href="{{ path ('monProfil',{'id': unProfil.id })}}">Modifier mon profil</a>
{% endif %}



{% endblock %}